{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/firestore/users.schema.json",
  "title": "User Document",
  "description": "Schema for a Firestore document inside the `users` collection.",
  "type": "object",
  "properties": {
    "uid": {
      "type": "string",
      "description": "Unique Firebase Authentication user ID."
    },
    "display_name": {
      "type": "string",
      "description": "User's display name."
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "User's email address."
    },
    "photo_url": {
      "type": "string",
      "format": "uri",
      "description": "URL pointing to the user's profile image."
    },
    "favorite_hobby": {
      "type": "string",
      "description": "User's favorite hobby."
    },
    "birthdate": {
      "type": "string",
      "format": "date-time",
      "description": "User birthdate stored as a Firestore timestamp."
    },
    "created_time": {
      "type": "string",
      "format": "date-time",
      "description": "Time the user document was created."
    }
  },
  "required": ["uid", "email", "created_time"],
  "additionalProperties": false
}
